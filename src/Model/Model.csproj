<Project Sdk="Microsoft.NET.Sdk">

  <!-- Project properties -->
  <PropertyGroup>
    <AssemblyName>ZeroInstall.Model</AssemblyName>
    <RootNamespace>ZeroInstall.Model</RootNamespace>
    <Description>Zero Install data model for the feed format</Description>
    <PackageProjectUrl>https://dotnet.0install.net/md_model.html</PackageProjectUrl>
    <OutputPath>..\..\artifacts\$(Configuration)\</OutputPath>
    <TargetFrameworks>net461;net472;netstandard2.1;net6.0</TargetFrameworks>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)'=='netstandard2.1' Or '$(TargetFramework)'=='net6.0'">
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <!-- Global usings -->
  <ItemGroup>
    <Using Include="ZeroInstall.Model.Properties" />
  </ItemGroup>

  <!-- Dependencies -->
  <ItemGroup>
    <PackageReference Include="NanoByte.Common" Version="$(NanoByteCommonVersion)" />
  </ItemGroup>

  <!-- Generate XML serialization assembly -->
  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.XmlSerializer.Generator" Version="7.0.0" />
    <PackageReference Include="Microsoft.XmlSerializer.Generator" Version="7.0.0" PrivateAssets="All" />
    <None Include="..\..\artifacts\$(Configuration)\net461\$(AssemblyName).XmlSerializers.dll" PackagePath="lib\net461" Pack="True" />
    <None Include="..\..\artifacts\$(Configuration)\net472\$(AssemblyName).XmlSerializers.dll" PackagePath="lib\net472" Pack="True" />
    <None Include="..\..\artifacts\$(Configuration)\netstandard2.1\$(AssemblyName).XmlSerializers.dll" PackagePath="lib\netstandard2.1" Pack="True" />
    <None Include="..\..\artifacts\$(Configuration)\net6.0\$(AssemblyName).XmlSerializers.dll" PackagePath="lib\net6.0" Pack="True" />
  </ItemGroup>

  <!-- Embedded resources -->
  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx" Generator="ResXFileCodeGenerator" LastGenOutput="Resources.Designer.cs" />
    <Compile Update="Properties\Resources.Designer.cs" DesignTime="True" AutoGen="True" DependentUpon="Resources.resx" />
  </ItemGroup>

  <Sdk Name="Microsoft.DotNet.PackageValidation" Version="1.0.0-preview.7.21379.12" />

</Project>
