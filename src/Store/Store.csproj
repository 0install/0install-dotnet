<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>ZeroInstall.Store</AssemblyName>
    <RootNamespace>ZeroInstall.Store</RootNamespace>
    <LangVersion>7.2</LangVersion>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <RunCodeAnalysis>False</RunCodeAnalysis>
    <CodeAnalysisRuleSet>..\CodeAnalysis.ruleset</CodeAnalysisRuleSet>
    <OutputPath>..\..\artifacts\$(Configuration)\</OutputPath>
    <OutputType>Library</OutputType>
    <PublishRepositoryUrl>True</PublishRepositoryUrl>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>..\sgKey.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(MSBuildRuntimeType)'=='Full'">
    <TargetFrameworks>net20;net35;net40;net45;netstandard2.0</TargetFrameworks>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>
  <PropertyGroup Condition="'$(MSBuildRuntimeType)'=='Mono' Or ('$(MSBuildRuntimeType)'=='Core' and '$(OS)'=='Windows_NT')">
    <TargetFrameworks>net45;netstandard2.0</TargetFrameworks>
  </PropertyGroup>
  <PropertyGroup Condition="'$(MSBuildRuntimeType)'=='Core' and '$(OS)'!='Windows_NT'">
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)'!='netstandard2.0' and '$(OS)'=='Windows_NT'">
    <GenerateSerializationAssemblies>True</GenerateSerializationAssemblies>
    <SgenUseProxyTypes>False</SgenUseProxyTypes>
  </PropertyGroup>

  <PropertyGroup>
    <Description>Zero Install data models and management functions for local file storage.</Description>
    <Product>Zero Install</Product>
    <Authors>Bastian Eicher</Authors>
    <Copyright>Copyright Bastian Eicher et al.</Copyright>
    <PackageProjectUrl>http://0install.de/api/</PackageProjectUrl>
    <PackageLicenseUrl>http://www.gnu.org/copyleft/lesser.html</PackageLicenseUrl>
    <PackageIconUrl>https://github.com/0install/0install-dotnet/raw/master/icon.png</PackageIconUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/0install/0install-dotnet/master/icon.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/0install/0install-dotnet</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="SevenZipSharp" HintPath="..\..\lib\SevenZipSharp.dll" />
    <Reference Include="INIFileParser" HintPath="..\..\lib\INIFileParser.dll" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)'!='netstandard2.0'">
    <Reference Include="System.Configuration" Pack="False" />
    <Reference Include="System.Runtime.Remoting" Pack="False" />
    <Reference Include="Microsoft.Deployment.Compression" HintPath="..\..\lib\Microsoft.Deployment.Compression.dll" />
    <Reference Include="Microsoft.Deployment.Compression.Cab" HintPath="..\..\lib\Microsoft.Deployment.Compression.Cab.dll" />
    <Reference Include="Microsoft.Deployment.WindowsInstaller" HintPath="..\..\lib\Microsoft.Deployment.WindowsInstaller.dll" />
    <Reference Include="XZ.NET" HintPath="..\..\lib\XZ.NET.dll" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NanoByte.Common" Version="2.2.2" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="ICSharpCode.SharpZipLib.Patched" Version="0.86.5.1" />
    <PackageReference Include="BouncyCastle.OpenPgp" Version="1.8.1.1" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)'=='netstandard2.0'">
    <PackageReference Include="Microsoft.Win32.Registry" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(MSBuildRuntimeType)'=='Full'">
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0-beta-63102-01" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <!-- Bundle managed libs -->
    <None Include="..\..\lib\INIFileParser.*;..\..\lib\Microsoft.Deployment.*;..\..\lib\SevenZipSharp.*;..\..\lib\XZ.NET.*" Pack="true" PackagePath="lib/net20" />
    <None Include="..\..\lib\INIFileParser.*;..\..\lib\Microsoft.Deployment.*;..\..\lib\SevenZipSharp.*;..\..\lib\XZ.NET.*" Pack="true" PackagePath="lib/net35" />
    <None Include="..\..\lib\INIFileParser.*;..\..\lib\Microsoft.Deployment.*;..\..\lib\SevenZipSharp.*;..\..\lib\XZ.NET.*" Pack="true" PackagePath="lib/net40" />
    <None Include="..\..\lib\INIFileParser.*" Pack="true" PackagePath="lib/netstandard2.0" />

    <!-- Bundle native libs -->
    <None Include="*.targets" Pack="true" PackagePath="build" />
    <None Include="..\..\lib\7zxa*.dll;..\..\lib\liblzma*.dll" Pack="true" PackagePath="build" CopyToOutputDirectory="Always" />
  </ItemGroup>

  <!-- Include XML Serialization assembly in NuGet package -->
  <ItemGroup>
    <None Include="..\..\artifacts\$(Configuration)\net20\$(AssemblyName).XmlSerializers.dll" Pack="true" PackagePath="lib/net20" />
    <None Include="..\..\artifacts\$(Configuration)\net35\$(AssemblyName).XmlSerializers.dll" Pack="true" PackagePath="lib/net35" />
    <None Include="..\..\artifacts\$(Configuration)\net40\$(AssemblyName).XmlSerializers.dll" Pack="true" PackagePath="lib/net40" />
  </ItemGroup>

  <ItemGroup>
    <CodeAnalysisDictionary Include="..\CodeAnalysisDictionary.xml" />
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

</Project>
