<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>0install</AssemblyName>
    <ApplicationIcon>..\..\icon.ico</ApplicationIcon>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <PackageId>ZeroInstall.Commands</PackageId>
    <RootNamespace>ZeroInstall.Commands</RootNamespace>
    <LangVersion>7.2</LangVersion>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <RunCodeAnalysis>False</RunCodeAnalysis>
    <CodeAnalysisRuleSet>..\CodeAnalysis.ruleset</CodeAnalysisRuleSet>
    <OutputPath>..\..\artifacts\$(Configuration)\</OutputPath>
    <OutputType>Exe</OutputType>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>

  <PropertyGroup>
    <Description>Command-line interface for Zero Install (both an actual CLI and a library for building other clients)</Description>
    <Product>Zero Install</Product>
    <Authors>Bastian Eicher</Authors>
    <Copyright>Copyright Bastian Eicher et al.</Copyright>
    <PackageProjectUrl>https://dotnet.0install.de/</PackageProjectUrl>
    <PackageLicenseExpression>LGPL-3.0-or-later</PackageLicenseExpression>
    <PackageIconUrl>https://raw.githubusercontent.com/0install/0install-dotnet/master/icon.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/0install/0install-dotnet</RepositoryUrl>
  </PropertyGroup>

  <!-- Auto-select supported target frameworks based on MSBuild version -->
  <PropertyGroup Condition="'$(MSBuildRuntimeType)'=='Full'">
    <TargetFrameworks>net20;net35;net40;net45;netcoreapp2.0</TargetFrameworks>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>
  <PropertyGroup Condition="'$(MSBuildRuntimeType)'=='Mono' Or ('$(MSBuildRuntimeType)'=='Core' And '$(OS)'=='Windows_NT')">
    <TargetFrameworks>net45;netcoreapp2.0</TargetFrameworks>
  </PropertyGroup>
  <PropertyGroup Condition="'$(MSBuildRuntimeType)'=='Core' and '$(OS)'!='Windows_NT'">
    <TargetFrameworks>netcoreapp2.0</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>..\sgKey.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Services\Services.csproj" PrivateAssets="None" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)'!='netcoreapp2.0'">
    <Reference Include="System.Web" Pack="False" />
    <Reference Include="System.ServiceProcess" Pack="False" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NDesk.Options.Patched" Version="0.3.1" />
  </ItemGroup>

  <ItemGroup Condition="'$(MSBuildRuntimeType)'!='Mono'">
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0-beta2-19367-01" PrivateAssets="All" />
  </ItemGroup>

  <!-- Restrict desktop integration support to .NET Framework builds -->
  <ItemGroup Condition="'$(TargetFramework)'=='netcoreapp2.0'">
    <Compile Remove="Desktop\**" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)'!='netcoreapp2.0'">
    <ProjectReference Include="..\DesktopIntegration\DesktopIntegration.csproj" PrivateAssets="None" />
    <EmbeddedResource Include="Desktop\Maintenance\legacy.manifest" />
  </ItemGroup>

  <!-- Include app config when .NET Framework EXE is referenced from NuGet package -->
  <ItemGroup>
    <None Include="*.targets" Pack="true" PackagePath="build/net20" />
    <None Include="App.config" Pack="true" PackagePath="build/net20/$(AssemblyName).exe.config" />
  </ItemGroup>

  <ItemGroup>
    <CodeAnalysisDictionary Include="..\CodeAnalysisDictionary.xml" />
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
    <EmbeddedResource Include="Basic\Exporters\import.*" />
  </ItemGroup>

</Project>
